<script>
$(document).ready(function(){
    var i = 1 ;
    var sum= 0 ;
    var d = new Date();
    var e = Math.random();
    $('#ticket').val(d + e);

    $('#addMore').on('click',function(){
        i++;
        $('#orders').append('<tr id="orderedItems'+i+'" ><td class="f_code">D-127</td><td class="f_name">Burger</td><td> <input type="number" class="cost" name="cost"> </td><td><button type="button" id="'+i+'" class="btn btn-danger btn_remove"><b>Remove</b></button></td></tr>');
    });

    $('#total').on('click',function(){
        
        $('.cost').each(function(){
            sum += Number($(this).val());
        });
        $("#result").css("background-color", "yellow");
        $('#result').text(sum);
    });

    $(document).on('click','.btn_remove',function(){
    var btn_rmv=$(this).attr("id");
    $('#orderedItems'+btn_rmv+'').remove();

    });
});
</script>