                            <!-- Button trigger modal -->
                            <button type="button" class="btn btn-info" data-toggle="modal" data-target="#editModal">
                                    Edit
                            </button>
                            <a href="/manager/seller/delete/<%= sellerInfo.emp_ID %>" type="button" class="btn btn-danger">Delete</a>  
